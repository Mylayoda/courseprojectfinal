@model courses.Areas.Admin.Models.ButtonModuleSmall
@using courses.Areas.Admin.Models;

<td style="width:120px;">
    <div class="btn-group" role="group">
        @Html.Partial("_SmallButtonPartial", new ButtonModuleSmall
        {
            Action = "Edit",
            ButtonType = "btn-primary",
            Glyph = "pencil",
            Text = "Edit Button",
            Id = Model.Id,
            ModuleId = Model.ModuleId,
            CourseId = Model.CourseId,
            SubscriptionId = Model.SubscriptionId,
            UserId = Model.UserId

          })

         @if(Model.UserId != null && Model.UserId.Equals(string.Empty))
        {
            @Html.Partial("_SmallButtonPartial", new ButtonModuleSmall
                {
                    Action = "Details",
                  ButtonType = "btn-success",
                    Glyph = "list",
                    Text = "Details Button",
                  Id = Model.Id,
                  ModuleId = Model.ModuleId,
                  CourseId = Model.CourseId,
                  SubscriptionId = Model.SubscriptionId,
                  UserId = Model.UserId

                })
        }
        @if(Model.UserId != null && !Model.UserId.Equals(string.Empty))
        {

           @Html.Partial("_SmallButtonPartial", new ButtonModuleSmall
               {
                   Action = "Subscriptions",
                 ButtonType = "btn-info",
                   Glyph = "list",
                   Text = "Subscriptions",
                 Id = Model.Id,
                 ModuleId = Model.ModuleId,
                 CourseId = Model.CourseId,
                 SubscriptionId = Model.SubscriptionId,
                 UserId = Model.UserId

               })
        }

        @Html.Partial("_SmallButtonPartial", new ButtonModuleSmall
        {
            Action = "Delete",
          ButtonType = "btn-danger",
            Glyph = "trash",
            Text = "Delete Button",
          Id = Model.Id,
          ModuleId = Model.ModuleId,
          CourseId = Model.CourseId,
          SubscriptionId = Model.SubscriptionId,
          UserId = Model.UserId

        })
    </div>
</td>
